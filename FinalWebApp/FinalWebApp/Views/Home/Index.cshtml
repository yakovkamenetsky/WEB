@{
    ViewData["Title"] = "Home Page";
}
<div class="col-md-10 center-block headline">
    Welcome to Holidai

</div>
<div class="container-fluid">
    <div class="row search-form">
        <div class="col-md-5">
            <div class="search-item">
                <form action="/search" method="get" id="search-form">
                    <input id="placeinput" required type="text" autofocus="true" class="input form-control" name="place" placeholder="Hotel, City, Country...">
                </form>
            </div>
        </div>
        
        <div class="col-md-3">
            <label>Check-in</label>
            <input id="endDate" class="input form-control" type="date" form="search-form" name="checkin" />
        </div>
        <div class="col-md-3">
            <label>Check-out</label>
            <input id="startDate" class="input form-control " type="date" form="search-form" name="checkout"/>
        </div>
        <div class="col-md-1">
            <div class="input-group-btn search-item">
                <button id="placeinputbutton" class="input btn btn-info input" type="submit" form="search-form">Search</button>
            </div>
        </div>
    </div>

    <div class="form-group col-md-offset-5 text-center search-item">
        <button class="input btn btn-info ai" type="button" onclick="showOrHideFeatures()">Try our AI-based search</button>
    </div>

    <div class="col-md-12" id="featuresView" style="display: none">
        @Html.Partial("~/Views/_ViewFeatures.cshtml")
    </div>
</div>
